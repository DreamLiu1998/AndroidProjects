<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            >
            <Button
                style="@style/btn1"
                android:text="MC"
                />
            <Button
                style="@style/btn1"
                android:text="MR"
                />
            <Button
                style="@style/btn1"
                android:text="MS"
                />
            <Button
                style="@style/btn1"
                android:text="M+"
                />
            <Button
                style="@style/btn1"
                android:text="M-"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            >
            <Button
                style="@style/btn1"
                android:text="←"
                android:gravity="center"
                />
            <Button
                style="@style/btn1"
                android:text="CE"
                />
            <Button
                style="@style/btn1"
                android:text="C"
                />
            <Button
                style="@style/btn1"
                android:text="±"
                />
            <Button
                style="@style/btn1"
                android:text="√"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            >
            <Button
                style="@style/btn1"
                android:text="7"
                />
            <Button
                style="@style/btn1"
                android:text="8"
                />
            <Button
                style="@style/btn1"
                android:text="9"
                />
            <Button
                style="@style/btn1"
                android:text="/"
                />
            <Button
                style="@style/btn1"
                android:text="%"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            >
            <Button
                style="@style/btn1"
                android:text="4"
                />
            <Button
                style="@style/btn1"
                android:text="5"
                />
            <Button
                style="@style/btn1"
                android:text="6"
                />
            <Button
                style="@style/btn1"
                android:text="*"
                />
            <Button
                style="@style/btn1"
                android:text="1/x"
                />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/one"
            style="@style/btn1"
            android:text="1"
            />
        <Button
            android:id="@+id/two"
            style="@style/btn1"
            android:layout_alignTop="@id/one"
            android:layout_toRightOf="@id/one"
            android:text="2"
            />
        <Button
            android:id="@+id/three"
            style="@style/btn1"
            android:layout_alignTop="@id/two"
            android:layout_toRightOf="@id/two"
            android:text="3"
            />
        <Button
            android:id="@+id/minus"
            style="@style/btn1"
            android:layout_alignTop="@id/three"
            android:layout_toRightOf="@id/three"
            android:text="-"
            />
        <Button
            android:id="@+id/equal"
            style="@style/btn2"
            android:layout_alignTop="@id/minus"
            android:layout_toRightOf="@id/minus"
            android:text="="
            android:gravity="center"
            />
        <Button
            android:id="@+id/plus"
            style="@style/btn1"
            android:layout_alignBottom="@id/equal"
            android:layout_toLeftOf="@id/equal"
            android:text="+"
            />
        <Button
            android:id="@+id/point"
            style="@style/btn1"
            android:layout_alignBottom="@id/plus"
            android:layout_toLeftOf="@id/plus"
            android:text="."
            />
        <Button
            style="@style/btn3"
            android:layout_alignTop="@id/point"
            android:layout_toLeftOf="@id/point"
            android:text="0"
            />
    </RelativeLayout>

</LinearLayout>